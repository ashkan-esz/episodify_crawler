{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"types": ["bun-types"],
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"],
			"@api/*": ["api/*"],
			"@crawler/*": ["crawler/*"],
			"@config/*": ["config/*"],
			"@services/*": ["services/*"],
			"@models/*": ["models/*"],
			"@utils/*": ["utils/*"],
			"@workers/*": ["workers/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
