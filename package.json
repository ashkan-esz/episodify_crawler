{
  "name": "episodify_crawler",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run dist/index.js",
    "build": "bun build src/index.ts --outdir ./dist --target bun --minify",
    "build_compile": "bun build --compile --minify --sourcemap --target=bun-linux-x64 src/index.ts --outfile myapp",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format .",
    "test": "bun test",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "description": "A high-performance web crawler for movies and series data collection",
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/swagger": "^1.3.0",
    "@sentry/bun": "^9.39.0",
    "chalk": "^5.4.1",
    "cheerio": "^1.1.0",
    "elysia-helmet": "^3.0.0",
    "fast-diff": "^1.3.0",
    "kysely": "^0.28.2",
    "lru-cache": "^11.1.0",
    "mongodb": "^6.17.0",
    "node-os-utils": "^1.3.7",
    "numbers-from-words": "^0.0.8",
    "ofetch": "^1.4.1",
    "p-queue": "^8.1.0",
    "persian-rex": "^2.3.3",
    "pg": "^8.16.3",
    "zod": "^4.0.5"
  },
  "files": [
    "./bin/*",
    "./lib/*"
  ],
  "typings": "./lib/index.d.ts",
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^22.15.31",
    "bun-types": "^1.2.16",
    "husky": "^9.1.7",
    "typescript": "^5.8.3"
  }
}
